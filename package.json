{
  "name": "orcid-parser",
  "version": "0.1.2",
  "description": "A JavaScript library for fetching and parsing ORCID v3.0 publication data",
  "type": "module",
  "main": "dist/index.js",
  "browser": "dist/index.min.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.min.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:cjs": "esbuild src/index.ts --platform=node --format=cjs --outfile=dist/index.cjs",
    "build:esm": "esbuild src/index.ts --platform=node --format=esm --outfile=dist/index.mjs",
    "build:browser": "esbuild src/index.ts --bundle --minify --format=life --global-name=OrcidParser --outfile=dist/index.min.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "pretest": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "orcid",
    "parser",
    "publication",
    "research"
  ],
  "author": "Sira Pornsiriprasert <code@psira.me> (https://psira.me/)",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/p-sira/orcid-parser",
  "devDependencies": {
    "@types/node": "^22.19.0",
    "@vitest/coverage-v8": "^4.0.6",
    "esbuild": "^0.25.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "files": [
    "dist"
  ]
}
